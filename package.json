{
  "name": "@acdh/apis-hub",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env BUNDLE_ANALYZER='enabled' next build --no-lint",
    "build": "next build",
    "dev": "next dev",
    "docker:dev": "docker run --rm --init -u `id -u`:`id -g` -v `pwd`:/app -w /app -p 3000:3000 node:16-slim npm run dev",
    "format": "prettier . --ignore-path .gitignore --list-different",
    "format:fix": "npm run format -- --write",
    "generate:favicons": "ts-script scripts/generate-favicons",
    "lint": "run-p lint:*:check",
    "lint:fix": "run-p lint:*:fix",
    "lint:code:check": "eslint . --cache --cache-location .next/cache/eslint/ --ext cjs,js,mjs,ts,tsx --ignore-path .gitignore",
    "lint:code:fix": "npm run lint:code:check -- --fix",
    "lint:styles:check": "stylelint '**/*.css' --cache --cache-location .next/cache/stylelint/ --ignore-path .gitignore",
    "lint:styles:fix": "npm run lint:styles:check -- --fix",
    "postbuild": "npm run generate:favicons",
    "postinstall": "patch-package",
    "prepare": "simple-git-hooks || true",
    "start": "next start",
    "test": "exit 0",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "validate": "npm run format && npm run lint && npm run typecheck && npm run test"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "packageManager": "npm@8.5.0",
  "dependencies": {
    "@headlessui/react": "^1.6.1",
    "@heroicons/react": "^1.0.6",
    "@next/bundle-analyzer": "^12.1.6",
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/capitalize": "^1.0.2",
    "@stefanprobst/is-nonempty-string": "^1.0.1",
    "@stefanprobst/log": "^1.0.3",
    "@stefanprobst/next-error-boundary": "^3.0.2",
    "@stefanprobst/next-page-metadata": "^2.0.5",
    "@stefanprobst/range": "^1.1.1",
    "@stefanprobst/request": "^0.1.10",
    "clsx": "^1.1.1",
    "graphology": "^0.24.1",
    "graphology-gexf": "^0.10.1",
    "graphology-layout-forceatlas2": "^0.9.1",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-query": "^4.0.0-beta.9",
    "react-toastify": "^9.0.1",
    "sharp": "^0.30.4",
    "sigma": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@next/eslint-plugin-next": "^12.1.6",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/eslint-config-next": "^5.1.0",
    "@stefanprobst/favicons": "^2.0.4",
    "@stefanprobst/prettier-config": "^2.0.1",
    "@stefanprobst/stylelint-config": "^2.1.2",
    "@stefanprobst/ts-script": "^1.0.2",
    "@stefanprobst/tsconfig": "^2.1.0",
    "@types/node": "^16.11.32",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "autoprefixer": "^10.4.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "graphology-types": "^0.24.3",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.13",
    "postcss-nesting": "^10.1.4",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.7.1",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.0-beta"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@stefanprobst/eslint-config-next"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --cache --cache-location .next/cache/stylelint/ --fix",
      "prettier --write"
    ],
    "*.@(cjs|js|mjs|ts|tsx)": [
      "eslint --cache --cache-location .next/cache/eslint/ --fix",
      "prettier --write"
    ],
    "*.@(json|md|yml)": "prettier --write"
  },
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": "postcss-nesting",
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run validate"
  },
  "stylelint": {
    "extends": "@stefanprobst/stylelint-config"
  }
}
